{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ApplicationCreateRequest.json",
  "title": "ApplicationCreateRequest",
  "description": "Schema for validating ApplicationCreateRequest",
  "type": "object",
  "required": [
    "status",
    "applicationContent",
    "laaReference",
    "individuals"
  ],
  "properties": {
    "status": {
      "$ref": "ApplicationStatus.json",
      "description": "Application status"
    },
    "applicationContent": {
      "$ref": "ApplyApplication.json",
      "description": "Application data to create"
    },
    "laaReference": {
      "type": "string",
      "minLength": 1,
      "description": "LAA reference number"
    },
    "individuals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "Individual.json"
      },
      "description": "Individuals associated with the application"
    }
  },
  "additionalProperties": false
}
